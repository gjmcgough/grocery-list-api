<p id="notice"><%= notice %></p>

<h1>Listing Grocery List Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Grocery list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grocery_list_users.each do |grocery_list_user| %>
      <tr>
        <td><%= grocery_list_user.user_id %></td>
        <td><%= grocery_list_user.grocery_list_id %></td>
        <td><%= link_to 'Show', grocery_list_user %></td>
        <td><%= link_to 'Edit', edit_grocery_list_user_path(grocery_list_user) %></td>
        <td><%= link_to 'Destroy', grocery_list_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

